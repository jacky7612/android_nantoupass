<resources>
    <!-- Base application theme. -->
    <style name="Theme.NanTouParking" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/c_20538e</item>

        <item name="colorPrimaryVariant">@color/c_20538e</item>
        <item name="colorAccent">@color/light_blue_A200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/c_20538e</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NanTouParking.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/c_20538e</item>
        <item name="colorAccent">@android:color/transparent</item>
    </style>
</resources>