<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/lay01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/bg_info_card"
        android:layout_marginTop="4dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/marker_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="20dp"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <ImageView
            android:id="@+id/bt_Local"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:background="@drawable/shape_fab_button"
            android:elevation="8dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@+id/layout_info_title"
            app:layout_constraintStart_toEndOf="@+id/layout_info_title"
            app:srcCompat="@drawable/ic_local" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/bg_info_card"
        app:layout_constraintTop_toBottomOf="@+id/lay01"
        android:layout_marginTop="4dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/marker_snippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充電站資訊"
            android:textSize="12dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <!-- 超連結 -->
    <TextView
        android:id="@+id/tv_go_to_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="點此前往 ➤"
        android:textColor="#1A2C5B"
        android:textStyle="bold"
        android:gravity="end"
        app:layout_constraintTop_toTopOf="@+id/lay01"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:ignore="MissingConstraints" />
    <ImageButton
        android:visibility="gone"
        android:id="@+id/bt_navigation"
        android:layout_margin="4dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_navigation"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="@+id/lay01"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_navigation" />

    <LinearLayout
        android:id="@+id/lay03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/bg_info_card"
        app:layout_constraintTop_toBottomOf="@+id/lay02"
        android:layout_marginTop="4dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            />
        <!-- 請放 AC 圖示    android:src="@drawable/ic_ac"-->

        <TextView
            android:id="@+id/tv_head01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AC樁 J1772  共 10 樁"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_avalible01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_available_count"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="可用：8"
            android:textSize="14sp"
            android:textColor="@color/colorBlue"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/bg_info_card"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/lay03"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            />
        <!-- 請放 AC 圖示    android:src="@drawable/ic_ac"-->

        <TextView
            android:id="@+id/tv_head02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AC樁 J1772  共 10 樁"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_avalible02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_available_count"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="可用：8"
            android:textSize="14sp"
            android:textColor="@color/colorBlue"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay05"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/bg_info_card"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/lay04"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            />
        <!-- 請放 AC 圖示    android:src="@drawable/ic_ac"-->

        <TextView
            android:id="@+id/tv_head03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AC樁 J1772  共 10 樁"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_avalible03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_available_count"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="可用：8"
            android:textSize="14sp"
            android:textColor="@color/colorBlue"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>