<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/layout_info_title"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/marker_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="24dp"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <TextView
            android:id="@+id/marker_snippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snippet"
            android:textSize="12dp"
            android:textAppearance="?attr/textAppearanceBody1" />
    </LinearLayout>
    <ImageView
        android:id="@+id/bt_Local"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:background="@drawable/shape_fab_button"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="@+id/layout_info_title"
        app:layout_constraintStart_toEndOf="@+id/layout_info_title"
        app:srcCompat="@drawable/ic_local" />
    <ImageButton
        android:id="@+id/bt_navigation"
        android:layout_margin="4dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_navigation"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="@+id/layout_info_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_navigation" />

    <!-- 充電或停車類型符號 -->
    <LinearLayout
        android:id="@+id/layout_info_flag"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_info_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_parking"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_parking_flag"
            app:srcCompat="@drawable/ic_parking_flag"
            android:elevation="8dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@+id/layout_info_title"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_charge"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:visibility="visible"
            android:background="@drawable/ic_charge_flag"
            app:srcCompat="@drawable/ic_charge_flag"
            android:elevation="8dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@+id/iv_parking"
            app:layout_constraintStart_toEndOf="@+id/iv_parking" />
    </LinearLayout>

    <!-- 資訊 -->
    <LinearLayout
        android:id="@+id/layout_info_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_info_flag"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/sub_info_content01"
            android:orientation="vertical"
            android:padding="2dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_info_flag"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_amount_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$80元"
                android:textSize="20dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@+id/sub_info_content01"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_amount_rate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停車每小時"
                android:textSize="12dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sub_info_content02"
            android:orientation="vertical"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="@+id/sub_info_content01"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_remain_cell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="110格"
                android:textSize="20dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@+id/sub_info_content02"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_remain_cell_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩餘車位"
                android:textSize="12dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sub_info_content03"
            android:orientation="vertical"
            android:padding="2dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_info_flag"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_open_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 小時"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/sub_info_content03" />

            <TextView
                android:id="@+id/tv_open_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="開放時間"
                android:textSize="12dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_info_hint"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_info_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="本場以時間費"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:background="@drawable/shape_round_light_type_light_gray"
            app:layout_constraintTop_toTopOf="@+id/sub_info_content01"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

    <View
        android:id="@+id/v_01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSeparator"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/layout_info_hint" />

<!-- 充電資訊 -->
    <LinearLayout
        android:id="@+id/layout_info_detail"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:padding="2dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/v_01"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充電資訊"
            android:textSize="24px"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/sub_info_content03"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尚餘10支充電樁\n$1.25/分．J1772.11kWh\n$1.25/分．TYPE2.11kWh\n剩餘空位/費率/營業時間請依現場標示為主"
            android:textSize="16px"
            app:layout_constraintTop_toTopOf="@+id/iv_parking"
            app:layout_constraintStart_toEndOf="@+id/iv_parking" />
    </LinearLayout>

    <View
        android:id="@+id/v_02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSeparator"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/layout_info_detail" />
<!-- 停車資訊 -->
    <LinearLayout
        android:id="@+id/layout_info_detail02"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:padding="2dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/v_02"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_detail_title02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停車資訊"
            android:textSize="24px"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/sub_info_content03"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_detail_content02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停車未滿1小時，以1小時計，之後未30分鐘以\n30分鐘計，進場15分鐘內免費"
            android:textSize="16px"
            app:layout_constraintTop_toTopOf="@+id/iv_parking"
            app:layout_constraintStart_toEndOf="@+id/iv_parking" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
