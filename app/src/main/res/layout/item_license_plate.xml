<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_plate_number_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/rounded_border_spinner">

    <ImageView
        android:id="@+id/item_plate_number_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/car"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/item_plate_number_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
        android:textColor="@color/charge_blue_color"
        android:text="@string/plate_number_default"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_plate_number_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:gravity="center"
        android:visibility="visible"
        android:id="@+id/item_plate_number_pay_record_textView"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="繳費記錄"
        android:textColor="#40798C"
        android:layout_marginEnd="5dp"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_plate_number_edit_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:gravity="center"
        android:id="@+id/item_plate_number_edit_textView"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="查詢帳單"
        android:textColor="#40798C"
        android:layout_marginEnd="5dp"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>