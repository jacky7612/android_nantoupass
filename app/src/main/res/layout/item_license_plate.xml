<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_plate_number_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/round_black_empty">

    <ImageView
        android:id="@+id/item_plate_number_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_car_48"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_plate_number_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:text="@string/plate_number_default"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_plate_number_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_plate_number_pay_record_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="繳費記錄"
        android:textColor="@color/c_3478F7"
        android:layout_marginEnd="20dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_plate_number_edit_textView"
        app:layout_constraintEnd_toStartOf="@+id/item_plate_number_edit_textView"
        app:layout_constraintTop_toTopOf="@+id/item_plate_number_edit_textView" />

    <TextView
        android:id="@+id/item_plate_number_edit_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查詢帳單"
        android:textColor="@color/c_3478F7"
        android:layout_marginEnd="20dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>