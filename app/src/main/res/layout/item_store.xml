<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_store_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/round_white"
    android:elevation="3dp">

    <ImageView
        android:elevation="6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/item_store_imageView"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:background="@drawable/round_white"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/icon_app_icon" />

    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/item_store_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:maxEms="12"
        android:maxLines="1"
        android:padding="5dp"
        android:text="@string/coupon_item_default_title"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_store_imageView"
        app:layout_constraintTop_toTopOf="@+id/item_store_imageView" />

    <TextView
        android:id="@+id/item_store_open_time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="start"
        android:maxEms="9"
        android:maxLines="2"
        android:padding="5dp"
        android:text="@string/coupon_item_default_exchange_status"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/item_store_imageView"
        app:layout_constraintBottom_toBottomOf="@+id/item_store_imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>