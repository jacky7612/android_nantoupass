<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.main.MainFragment">

    <include
        android:id="@+id/toolbar_include"
        layout="@layout/toolbar_include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/main_scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_include">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/main_banner_default_imageView"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_margin="40dp"
                android:background="@color/black"
                android:src="@drawable/img_default_banner_2"
                app:layout_constraintBottom_toTopOf="@+id/main_main_constraintLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.youth.banner.Banner
                android:id="@+id/main_banner_login_banner"
                android:layout_width="0dp"
                android:layout_height="240dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_main_constraintLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/c_1f538c"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_banner_login_banner">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_function_constraintLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/c_2087BB"
                    app:layout_constraintBottom_toTopOf="@+id/main_store_constraintLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/parking_count_constraintLayout"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_dark_blue"
                        android:elevation="8dp"
                        app:layout_constraintEnd_toStartOf="@id/main_customer_service_phone_constraintLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/parking_count_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="車位剩餘數量"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/parking_count_imageView" />

                        <ImageView
                            android:id="@+id/parking_count_imageView"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            app:tint="@color/white"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/icon_parking_count"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/main_customer_service_phone_constraintLayout"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/round_dark_blue"
                        android:elevation="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/parking_count_constraintLayout"
                        app:layout_constraintEnd_toStartOf="@id/main_city_page_constraintLayout"
                        app:layout_constraintStart_toEndOf="@+id/parking_count_constraintLayout"
                        app:layout_constraintTop_toTopOf="@+id/parking_count_constraintLayout">

                        <TextView
                            android:id="@+id/main_customer_service_phone_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="客服專線"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/main_customer_service_phone_imageView" />

                        <ImageView
                            android:id="@+id/main_customer_service_phone_imageView"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            app:tint="@color/white"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/icon_phone_call"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/main_city_page_constraintLayout"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/round_dark_blue"
                        android:elevation="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/parking_count_constraintLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/main_customer_service_phone_constraintLayout"
                        app:layout_constraintTop_toTopOf="@+id/parking_count_constraintLayout">

                        <TextView
                            android:id="@+id/main_city_page_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="官網連結"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/main_city_page_imageView" />

                        <ImageView
                            android:id="@+id/main_city_page_imageView"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            app:tint="@color/white"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/icon_official_web"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/parking_fee_constraintLayout"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/round_dark_blue"
                        android:elevation="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/main_health_check_constraintLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/parking_count_constraintLayout">

                        <TextView
                            android:id="@+id/parking_fee_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="查詢付費"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/parking_fee_imageView" />

                        <ImageView
                            android:id="@+id/parking_fee_imageView"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="10dp"
                            app:tint="@color/white"
                            android:src="@drawable/icon_plate_unpaid"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/main_health_check_constraintLayout"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/round_dark_blue"
                        android:elevation="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/parking_fee_constraintLayout"
                        app:layout_constraintEnd_toStartOf="@+id/main_mayor_page_constraintLayout"
                        app:layout_constraintStart_toEndOf="@+id/parking_fee_constraintLayout"
                        app:layout_constraintTop_toTopOf="@+id/parking_fee_constraintLayout">

                        <ImageView
                            android:id="@+id/parking_info_icon_imageView"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="10dp"
                            app:tint="@color/white"
                            android:src="@drawable/icon_nanotou"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.2" />

                        <TextView
                            android:id="@+id/parking_info_icon_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="南投縣政府\n停車服務資訊"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/parking_info_icon_imageView" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/main_mayor_page_constraintLayout"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/round_dark_blue"
                        android:elevation="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/parking_fee_constraintLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/main_health_check_constraintLayout"
                        app:layout_constraintTop_toTopOf="@+id/parking_fee_constraintLayout">

                        <TextView
                            android:id="@+id/main_mayor_page_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="市長臉書"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/main_mayor_page_imageView" />

                        <ImageView
                            android:id="@+id/main_mayor_page_imageView"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/icon_mayor"
                            android:layout_marginTop="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_store_constraintLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/c_2087BB"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_function_constraintLayout">

                    <TextView
                        android:id="@+id/main_store_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="漫步踩點"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/parking_garage_tab_view"
                        android:layout_width="0dp"
                        android:layout_height="3dp"
                        android:background="@color/light_blue_600"
                        app:layout_constraintEnd_toEndOf="@+id/main_store_textView"
                        app:layout_constraintStart_toStartOf="@+id/main_store_textView"
                        app:layout_constraintTop_toBottomOf="@+id/main_store_textView" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/main_store_recyclerView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/main_store_textView"
                        tools:listitem="@layout/item_store" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>