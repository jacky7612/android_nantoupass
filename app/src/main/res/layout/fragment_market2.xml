<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.MarketFragment2">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar_include"
        layout="@layout/toolbar_include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

  <com.github.chrisbanes.photoview.PhotoView
      android:id="@+id/map"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/toolbar_include"
      android:layout_width="wrap_content"
      android:layout_height="230dp"
      android:background="@drawable/fbbanner"/>
<TextView
    android:id="@+id/txt"
    android:layout_marginTop="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:text="市集活動辦法"
    android:textSize="23sp"
    android:textColor="@color/charge_blue_color"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/map"/>
    <com.github.chrisbanes.photoview.PhotoView
        android:layout_marginTop="20dp"
        android:id="@+id/rule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt"
        android:background="@drawable/rule"
        android:layout_width="350dp"
        android:layout_height="230dp"/>

    <TextView
        android:id="@+id/btn_get_point"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/charge_blue_color"
        android:gravity="center"
        android:background="@drawable/sunny"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rule"
        android:layout_width="350dp"
        android:layout_height="70dp"/>

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/discount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/btn_get_point"
        android:layout_width="350dp"
android:background="@drawable/children"
        android:layout_height="300dp"
        />
        <com.github.chrisbanes.photoview.PhotoView
            android:layout_marginTop="30dp"
            android:id="@+id/location"
            android:background="@drawable/location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discount"
            android:layout_width="350dp"
            android:layout_height="500dp"/>

        <com.github.chrisbanes.photoview.PhotoView
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="30dp"
            android:background="@drawable/discount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/location"
            android:layout_width="350dp"
            android:layout_height="800dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>