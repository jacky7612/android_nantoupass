<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.MarketFragment2">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar_include"
        layout="@layout/toolbar_include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/map"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/toolbar_include"
      android:layout_width="wrap_content"
      android:layout_height="270dp"
      android:background="@drawable/map"/>

    <ImageView
        android:id="@+id/rule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map"
        android:background="@drawable/rule2"
        android:layout_width="350dp"
        android:layout_height="270dp"/>

    <TextView
        android:id="@+id/btn_get_point"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/charge_blue_color"
        android:gravity="center"
        android:text="點此前往 『陽信 Sunny 購』註冊 \n 領取年貨大街點數"
        android:background="@drawable/market2_background"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rule"
        android:layout_width="350dp"
        android:layout_height="70dp"/>

    <ImageView
        android:id="@+id/discount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/btn_get_point"
        android:layout_width="350dp"
android:background="@drawable/discount"
        android:layout_height="800dp"
        />
        <ImageView
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="30dp"
            android:background="@drawable/campaign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discount"
            android:layout_width="350dp"
            android:layout_height="500dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>