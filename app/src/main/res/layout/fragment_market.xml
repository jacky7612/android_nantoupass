<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 上方 Toolbar -->
    <include
        android:id="@+id/toolbar_include"
        layout="@layout/toolbar_include"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 底部 Toolbar -->
    <include
        android:id="@+id/toolbar_feet"
        layout="@layout/toolbar_feet"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_include"
        app:layout_constraintBottom_toTopOf="@id/indicator1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <!-- Top Buttons -->
            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_scenic_spot"
                    android:layout_width="195dp"
                    android:layout_height="130dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/btn_rounded_blue"
                    android:elevation="3dp"
                    android:gravity="center"
                    android:text="南投景點"
                    android:textColor="#4E788A"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btn_intro"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/btn_rounded_white"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:text="商家介紹"
                        android:textColor="#4E788A"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_ar"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/btn_rounded_white"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:text="AR 商家"
                        android:textColor="#4E788A"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- 商家優惠專區 -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:paddingBottom="8dp"
                    android:text="商家優惠專區"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 活動專區 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:text="- 活動專區 -"
                android:textColor="#4E788A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageBanner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#F3F3F3"
                android:scaleType="fitXY" />

            <!-- 商圈活動消息 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="商圈活動消息"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewNews"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:nestedScrollingEnabled="false"
                android:padding="8dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Indicator -->
    <TextView
        android:id="@+id/indicator1"
        android:layout_width="30dp"
        android:layout_height="4dp"
        android:background="@color/nantou_pass"
        app:layout_constraintBottom_toTopOf="@id/toolbar_feet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
