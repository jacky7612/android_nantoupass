<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <!-- 業務 -->
    <TextView
        android:id="@+id/labelBusiness"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:text="業務"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/more_rounded_background"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:textSize="14sp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvBusinessDetails"
        android:textColor="#4E788A"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="農林漁牧生產、農牧業推廣..."
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <!-- 專線 -->
    <TextView
        android:id="@+id/labelPhone"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="專線"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/more_rounded_background"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:textColor="#4E788A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="049-2222110"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvExtension"
            android:textColor="#4E788A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分機 201、206"
            android:textSize="16sp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Bottom Links -->
    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_home"/>
            <TextView
                android:id="@+id/tvWebsite"
                android:textColor="#4E788A"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="網站連結" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_home"/>
            <TextView
                android:id="@+id/btnWebsite"
                android:textColor="#4E788A"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="前往撥打專線" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginHorizontal="20dp"
        android:background="@color/colorGrayDefault"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
