<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_map_tour_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/white"
    android:elevation="100dp">

    <TextView
        android:id="@+id/item_map_tour_no_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/shape_circle_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_map_tour_content_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="熱門景點"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:maxEms="7"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="5dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_map_tour_no_textView"
        app:layout_constraintStart_toEndOf="@+id/item_map_tour_no_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_map_tour_no_textView" />
</androidx.constraintlayout.widget.ConstraintLayout>