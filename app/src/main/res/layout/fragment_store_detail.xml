<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.main.StoreDetailFragment">

    <include
        android:id="@+id/toolbar_include"
        layout="@layout/toolbar_include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/store_detail_scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_include">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/store_detail_main_constraintLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/store_detail_content_constraintLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/store_detail_imageView"
                        android:layout_width="0dp"
                        android:layout_height="300dp"
                        android:layout_margin="10dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/round_c_7fd3f6"
                        android:src="@drawable/icon_horn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/store_detail_name_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="旗艦概念店"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/store_detail_imageView"
                        app:layout_constraintTop_toBottomOf="@+id/store_detail_imageView" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/store_detail_link_constraintLayout"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/round_c_7fd1f6"
                        android:elevation="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/store_detail_name_textView"
                        app:layout_constraintTop_toBottomOf="@+id/store_detail_name_textView">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/store_detail_navigation_constraintLayout"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/round_light_gray_empty"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/store_detail_phone_constraintLayout"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/store_detail_navigation_imageView"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/icon_location"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/store_detail_navigation_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="導航"
                                android:textColor="@color/c_1f538c"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/store_detail_navigation_imageView"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/store_detail_phone_constraintLayout"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/round_light_gray_empty"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/store_detail_official_web_constraintLayout"
                            app:layout_constraintStart_toEndOf="@+id/store_detail_navigation_constraintLayout"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/store_detail_phone_imageView"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/icon_local_phone"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/store_detail_phone_textView"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/store_detail_phone_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="電話"
                                android:textColor="@color/c_1f538c"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/store_detail_phone_imageView"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/store_detail_official_web_constraintLayout"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/round_light_gray_empty"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/store_detail_phone_constraintLayout"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/store_detail_official_web_imageView"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/icon_home_"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/store_detail_official_web_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="官網"
                                android:textColor="@color/c_1f538c"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/store_detail_official_web_imageView"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/store_detail_top_view"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/c_1f538c"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/store_detail_link_constraintLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/store_detail_des_textView"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textSize="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/store_detail_top_view"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/store_detail_show_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:textColor="@color/c_1f538c"
                        android:layout_marginEnd="5dp"
                        android:textSize="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/store_detail_des_textView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <View
                        android:id="@+id/store_detail_bottom_view"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/c_1f538c"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/store_detail_show_textView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/item_1_constraintLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/round_gray"
                        app:layout_constraintTop_toBottomOf="@+id/store_detail_bottom_view"
                        app:layout_constraintStart_toStartOf="@+id/store_detail_bottom_view"
                        app:layout_constraintEnd_toEndOf="@+id/store_detail_bottom_view">
                        <TextView
                            android:id="@+id/item_1_title_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="營業時間"
                            android:textSize="16dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/c_1f538c"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <TextView
                            android:id="@+id/item_1_content_textView"
                            android:textSize="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:text="lidshglahlkghalkhglahgl"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/item_1_title_textView"
                            app:layout_constraintStart_toStartOf="@+id/item_1_title_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/item_2_constraintLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/round_gray"
                        app:layout_constraintTop_toBottomOf="@+id/item_1_constraintLayout"
                        app:layout_constraintStart_toStartOf="@+id/store_detail_bottom_view"
                        app:layout_constraintEnd_toEndOf="@+id/store_detail_bottom_view">
                        <TextView
                            android:id="@+id/item_2_title_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="營業項目"
                            android:textSize="16dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/c_1f538c"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <TextView
                            android:id="@+id/item_2_content_textView"
                            android:textSize="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:text="lidshglahlkghalkhglahgl"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/item_2_title_textView"
                            app:layout_constraintStart_toStartOf="@+id/item_2_title_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/item_3_constraintLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/round_gray"
                        app:layout_constraintTop_toBottomOf="@+id/item_2_constraintLayout"
                        app:layout_constraintStart_toStartOf="@+id/store_detail_bottom_view"
                        app:layout_constraintEnd_toEndOf="@+id/store_detail_bottom_view">
                        <TextView
                            android:id="@+id/item_3_title_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="店家地址"
                            android:textSize="16dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/c_1f538c"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <TextView
                            android:id="@+id/item_3_content_textView"
                            android:textSize="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:text="lidshglahlkghalkhglahgl"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/item_3_title_textView"
                            app:layout_constraintStart_toStartOf="@+id/item_3_title_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/item_4_constraintLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/round_gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/item_3_constraintLayout"
                        app:layout_constraintStart_toStartOf="@+id/store_detail_bottom_view"
                        app:layout_constraintEnd_toEndOf="@+id/store_detail_bottom_view">
                        <TextView
                            android:id="@+id/item_4_title_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="聯絡電話"
                            android:textSize="16dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/c_1f538c"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <TextView
                            android:id="@+id/item_4_content_textView"
                            android:textSize="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:text="lidshglahlkghalkhglahgl"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/item_4_title_textView"
                            app:layout_constraintStart_toStartOf="@+id/item_4_title_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>