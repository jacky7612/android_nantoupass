<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.StoreManagerFragment2">
    <include
        android:id="@+id/toolbar_include"
        layout="@layout/toolbar_include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/SOSACowBoy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_include"
        android:layout_marginTop="20dp"
     android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#91ACB7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOSA牛仔" />

    <TextView
        android:id="@+id/record_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SOSACowBoy"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="店數核銷紀錄"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/round_darker_grey"/>

    <TextView
        android:id="@+id/logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:text="登出"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/round_market_darker_green"/>

</androidx.constraintlayout.widget.ConstraintLayout>