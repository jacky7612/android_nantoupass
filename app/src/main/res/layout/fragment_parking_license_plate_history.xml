<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/toolbar_include"
        layout="@layout/toolbar_include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/parking_road_textView"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="?android:selectableItemBackground"
        android:foreground="@android:color/transparent"
        android:gravity="center_horizontal|center_vertical"
        android:padding="5dp"
        android:text="路邊停車"
        android:textColor="@color/charge_blue_color"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/parking_garage_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_include" />

    <TextView
        android:id="@+id/parking_garage_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?android:selectableItemBackground"
        android:foreground="@android:color/transparent"
        android:gravity="center_horizontal|center_vertical"
        android:padding="5dp"
        android:text="停車場"
        android:textColor="@color/charge_blue_color"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/parking_road_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/parking_road_textView"
        app:layout_constraintTop_toTopOf="@+id/parking_road_textView" />

    <View
        android:id="@+id/parking_road_tab_view"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/charge_blue_color"
        app:layout_constraintBottom_toBottomOf="@+id/parking_road_textView"
        app:layout_constraintEnd_toEndOf="@+id/parking_road_textView"
        app:layout_constraintStart_toStartOf="@+id/parking_road_textView" />

    <View
        android:id="@+id/parking_garage_tab_view"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/charge_blue_color"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/parking_garage_textView"
        app:layout_constraintEnd_toEndOf="@+id/parking_garage_textView"
        app:layout_constraintStart_toStartOf="@+id/parking_garage_textView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parking_road_constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/car_plate_outline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/car_plate_outline"
        app:layout_constraintTop_toBottomOf="@id/search_plate_number_button">

        <TextView
            android:id="@+id/dot"
            android:layout_marginTop="-10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=". . ."
            android:textColor="#40798C"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/plate_history_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="查詢記錄"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/charge_blue_color"
            app:layout_constraintBottom_toTopOf="@+id/plate_number_recyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_parking_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text=""
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/plate_number_recyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/plate_history_edit_textView"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:text="編輯"
            android:textColor="@color/charge_blue_color"
            android:textSize="14dp"
            android:background="@drawable/rounded_border_spinner"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/plate_history_textView"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="15dp"
            android:id="@+id/plate_number_recyclerView"
            android:layout_width="0dp"
            android:layout_height="350dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plate_history_textView"
            tools:listitem="@layout/item_license_plate" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/car_plate_outline"
        android:layout_marginTop="30dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        app:layout_constraintTop_toBottomOf="@id/parking_road_textView"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_border"
        android:layout_marginBottom="16dp">

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/car_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="輸入欲查詢車號"
            android:paddingTop="4dp"
            android:textSize="15sp"
            android:textColor="#ACACAC" />

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/car_plate_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/car_plate">

            <EditText
                android:id="@+id/plate_text_editText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/car_plate"
                android:cursorVisible="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:inputType="textCapCharacters"
                android:textColor="@android:color/black"
                android:textColorHint="@color/grey"
                android:textCursorDrawable="@drawable/edit_text_cursor_color"
                android:textSize="16sp" />


            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="#40798C"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/plate_number_editText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:cursorVisible="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="@color/grey"
                android:textCursorDrawable="@drawable/edit_text_cursor_color"
                android:background="@drawable/car_plate"
                android:gravity="center"
                android:padding="8dp"
                android:inputType="textCapCharacters"
                android:textSize="16sp"
                android:textColor="@android:color/black" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/search_plate_number_button"
        android:layout_width="140dp"
        android:layout_height="38dp"
        android:background="@drawable/rounded_button_40798c"
        android:text="查詢待繳清單"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/car_plate_outline"
        app:layout_constraintTop_toBottomOf="@+id/car_plate_outline" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parking_garage_constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/parking_garage_textView"
        app:layout_constraintStart_toStartOf="@id/parking_garage_textView"
        app:layout_constraintTop_toBottomOf="@id/parking_garage_textView">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/parking_garage_recyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/c_eeeeee_100"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_parking_garage" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:elevation="10dp"
        style="@style/progressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>